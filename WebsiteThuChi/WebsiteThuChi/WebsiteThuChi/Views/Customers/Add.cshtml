@model WebsiteThuChi.Models.Customer

@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Thêm Khách Hàng</h2>
<div style="width:700px">
    @using (Html.BeginForm("Add", "Customers", FormMethod.Post))
    {
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.CustomerName)
            @Html.TextBoxFor(model => model.CustomerName, new { @class = "form-control" })
            <span class="text-danger">  @Html.ValidationMessageFor(model => model.CustomerName)</span>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.CustomerAddress)
            @Html.TextBoxFor(model => model.CustomerAddress, new { @class = "form-control" })
           <span class="text-danger"> @Html.ValidationMessageFor(model => model.CustomerAddress)</span>
        </div>
        <input type="submit" value="Thêm" class="btn btn-primary btn-lg" />

    }
</div>
